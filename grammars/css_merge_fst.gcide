/********************************************
 * THE CSS TOKEN SPECIFICATION STARTS HERE *
 ********************************************/

/* WHITE SPACE */

SPECIAL_TOKEN :
{
  " "
| "\t"
| "\n"
| "\r"
| "\f"
/*| "\ufffd"*/
}

/* COMMENTS */

MORE :
{
  "/*" : IN_MULTI_LINE_COMMENT
}

<IN_MULTI_LINE_COMMENT>
SPECIAL_TOKEN :
{
  <MULTI_LINE_COMMENT: "*/" > : DEFAULT
}

<IN_MULTI_LINE_COMMENT>
MORE :
{
  < ~[] >
}


/* RESERVED WORDS AND LITERALS */
/* Macro Definition */

TOKEN :
{
  <#ident: (["-"])?(<nmstart>)(<nmchar>)*>
 |
  <#name: (<nmchar>)+>
 |
  <#num: (["0"-"9"])+ | ((["0"-"9"])*"."(["0"-"9"]))+ >
 |
  <#nmstart: ["_","a"-"z","A"-"Z"] | <nonascii> | <escape> >
 |
  <#nmchar: ["_","a"-"z","A"-"Z","0"-"9","-"] | <nonascii> | <escape> >
 |
  <#escape: (<unicode>) | "\\"~["\n","\r","\f","0"-"9","a"-"f"]>
 |
  <#unicode: "\\"(["0"-"9","a"-"f"]){1,6}((["\r","\n"]) | ([ "\n","\r","\t","\f"]))?>
 |
  <#nonascii: ~["\0"-"\177"]>
 |
  <#string: <string1> | <string2> >
 |
  <#string1: "\""(~["\n","\r","\f","\\","\""] | "\\"<nl> | <escape>)*"\"">
 |
  <#string2: "\'"(~["\n","\r","\f","\\","\'"] | "\\"<nl> | <escape>)*"\'">
 |
  <#badstring: <badstring1> | <badstring2> >
 |
  <#badstring1: "\""(~["\n","\r","\f","\\","\""] | "\\"<nl> | <escape>)*>
 |
  <#badstring2: "\'"(~["\n","\r","\f","\\","\'"] | "\\"<nl> | <escape>)*>
 |
  <#nl:  "\n" |"\r""\n" | "\r" |"\f">

}

/* TOKEN DEFINITION */

TOKEN :
{
  <IDENT: <ident> >
 |
  <ATKEYWORD: "@"<ident> >
 |
  <STRING: <string> >
 |
  <BADSTRING: <badstring> >
 |
  <HASH: "#"<name> >
 |
  <NUMBER: <num> >
 |
  <PERCENTAGE: <num>"%" >
 |
  <DIMENSION: <num><ident> >
 |
  <URI: "url("<string>")" |
         "url("( ["!","#","$","%","&","*","-","~"] | <nonascii> | <escape>)* ")" >
 |
  <UNICODE_RANGE:  "U+"((["0"-"9","A"-"F"])?){1,6}("-"(["0"-"9","A"-"F"]){1,6})? >
 |
  <CDO: "<!--" >
 |
  <CDC: "-->" >
 |
  <SEMICOLON: ";" >
 |
  <COLON: ":" >
 |
  < LCURLY: "{" >
 |
  <RCURLY: "}" >
 |
  <LPAREN: "(" >
 |
  <RPAREN: ")" >
 |
  <LBRACKET: "[" >
 |
  <RBRACKET: "]" >
 |
  <FUNCTION: <ident>"(" >
 |
  <INCLUDES: "~=" >
 |
  <DASHMATCH: "|=" >
 |
  <DELIM: "#/\\" |
          "@/\\" |
          "@/-" |
          "@/-\\" |
          "-/\\" |
          "-/-" |
          "\\</!" |
          "\\</!-">
}

GRAMMARSTART

/*****************************************
 * THE CSS LANGUAGE GRAMMAR STARTS HERE *
 *****************************************/

/**
 * Main entry point for parsing css files.
 */

@FSTNonTerminal()
CompilationUnit:
        (StyleSheet)*
        <EOF>
;

StyleSheet:
    <CDO> | <CDC> | Statement
;

Statement:
    RuleSet|
    AtRule
;

AtRule:
    <ATKEYWORD> (Any)* [InnerAtRule]
;

InnerAtRule:
    Block |
    <SEMICOLON>
;

Block:
    <LCURLY> (InnerBlockDeclaration)* <RCURLY>
;

InnerBlockDeclaration:
    Any |
    Block |
    <ATKEYWORD> |
    <SEMICOLON>
;

RuleSet:
    (Selector)? <LCURLY> (Declaration)? (InnerRuleSet)* <RCURLY>
;

InnerRuleSet:
    <SEMICOLON> (Declaration)?
;

Selector:
    (Any)+
 ;

Declaration:
    (<DELIM>)? Property <COLON> Value
;

Property:
    <IDENT>
;

Value:
    (InnerValueDeclaration)+
;

InnerValueDeclaration:
    Any |
    Block |
    <ATKEYWORD>
;

Any:
    <IDENT> |
    <NUMBER> |
    <PERCENTAGE> |
    <DIMENSION> |
    <STRING> |
    <DELIM> |
    <URI> |
    <HASH> |
    <UNICODE_RANGE> |
    <INCLUDES> |
    <DASHMATCH> |
    <FUNCTION> (Any)* <RPAREN> |
    <LPAREN> (Any)* <RPAREN> |
    <LBRACKET> (Any)* <RBRACKET>
;